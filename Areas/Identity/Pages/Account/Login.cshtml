<section class="d-flex">
    <div class="loginContainer row shadow">
        <div class="col-md-12">
            <div class="row p-3">
                <div class="col-md-6">
                    <form class="form-horizontal" role="form" id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-offset-2 col-md-10 hideRow">
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class=" col-md-12">
                                <!-- <input type="button" value="Login" class="btn btn-blue btn-block" id="btn-login" /> -->
                                <button type="submit" class="btn btn-primary">Log in</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar como novo usuario</a>
                            </p>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <h4>Use sua conta do IFMG para logar.</h4>
                    <hr />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    No momento, não é possivel se logar usando a conta do google
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit"
                                                    class="btn btn-primary"
                                                    name="provider" value="@provider.Name" 
                                                    title="Logar usando @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}