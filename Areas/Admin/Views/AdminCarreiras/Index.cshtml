<div class="container-fluid">
    <div class="row">
        <div class="card col-md-12">
            <div class="pd-15">
                <h1 class="title">Lista das carreiras cadastradas</h1>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p class="button">
                                    <a class="btn btn-info" asp-action="Create">Criar Carreira</a>
                                </p>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-style table-sm">
                                <thread>
                                    <tr>
                                        <th class="text-center">Nome</th>
                                    </tr>
                                </thread>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NomeCarreira)
                                            </td>
                                            <td>
                                                <p class="button"><a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Iso5">Editar</a></p>
                                            </td>
                                            <td>
                                                <p class="button"><a class="btn btn-grey" asp-action="Details" asp-route-id="@item.Iso5">Detalhes</a></p>
                                            </td>
                                            <td>
                                                <p class="button"><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Iso5">Deletar</a></p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
