<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="description" content="#" />
    <meta name="keywords" content="#" />
    <meta name="author" content="#" />
    <meta name="robots" content="index, follow" />
    <link rel="icon" href="#" type="image/*" />
    <link rel="canonical" href="#" />

    <!-- social media metatags -->
    <meta property="og:title" content="#" />
    <meta property="og:description" content="#" />
    <meta property="og:locale" content="#" />
    <meta property="og:url" content="#" />
    <meta property="og:site_name" content="#" />
    <meta property="og:type" content="#" />
    <meta property="og:image" content="#" />
    <meta property="og:image:type" content="image/*" />
    <meta property="og:image:width" content="#" />
    <meta property="og:image:height" content="#" />

    <!-- metatags for twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content="#" />
    <meta name="twitter:site" content="" />
    <meta name="twitter:title" content="#" />
    <meta name="twitter:description" content="#" />

    <!-- CSS imports -->
    <link rel="stylesheet" href="~/css/main.css" />
    <link href="~/css/Error.css" rel="stylesheet" />

    <link href="~/node_modules/jquery-ui-1.12.1/jquery-ui.theme.min.css" rel="stylesheet" />
    <link href="~/node_modules/jquery-ui-1.12.1/jquery-ui.min.css" rel="stylesheet" />
    <title>SAGP</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">Dashboard - SAGP</div>
            <div class="list-group list-group-flush">
                @if (User.IsInRole("Chefe do Setor"))
                {
                    <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action"><i class="fa fa-exchange" aria-hidden="true"></i>Administração</a>
                }
                <a asp-controller="App" asp-action="Index" class="list-group-item list-group-item-action menu-active"><i class="fa fa-home"></i>Home</a>
                <a asp-controller="App" asp-action="Cadastro" class="list-group-item list-group-item-action"><i class="fa fa-id-badge" aria-hidden="true"></i>Cadastrar</a>
                <a asp-controller="App" asp-action="ListarFuncionarios" class="list-group-item list-group-item-action"><i class="fa fa-users" aria-hidden="true"></i>Listar Funcionarios</a>
                <a asp-controller="FuncionarioCarreira" asp-action="Create" class="list-group-item list-group-item-action"><i class="fa fa-road" aria-hidden="true"></i>Carreiras</a>
                <a asp-controller="Tarefas" asp-action="CriarEditar" class="list-group-item list-group-item-action"><i class="fa fa-cogs" aria-hidden="true"></i>Criar Tarefa</a>
                <a asp-controller="Tarefas" asp-action="VisualizarTodas" class="list-group-item list-group-item-action"><i class="fa fa-list" aria-hidden="true"></i>Ver Tarefas</a>
            </div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light border-bottom">
                <button class="btn btn-link" id="menu-toggle">
                    <i id="open-close" class="fa fa-long-arrow-left" aria-hidden="true"></i>
                </button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item dropdown">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Renderiza a Index Aqui -->
            @RenderBody()
        </div>
    </div>
    <!-- javascrips imports -->
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/js/min/popper.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/template-functions.js"></script>
    <script src="~/node_modules/jquery-ui-1.12.1/jquery-ui.js"></script>


    @RenderSection("Scripts", required: false)
</body>

</html>